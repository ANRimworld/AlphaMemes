<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	
	
	<!--Ritual Pattern-->
	<RitualPatternDef>
		<defName>FF_CremateFuneralPattern</defName>
		<nameMaker>NamerRitualFuneral</nameMaker>
		<ritualExpectedDesc>Once a {IDEO} member dies, other {MEMBERS} witnesss {RITUAL_labelDef} return to dust.</ritualExpectedDesc>
		<ritualObligationTriggers>
		  <li Class="RitualObligationTrigger_MemberDiedProperties">
			<mustBePlayerIdeo>true</mustBePlayerIdeo>
		  </li>
		</ritualObligationTriggers>
		<ritualObligationTargetFilter>FF_FuneralTargetThingNeedsPower</ritualObligationTargetFilter>
		<ritualBehavior>FF_CremateFuneralBehavior</ritualBehavior>
		<ritualOutcomeEffect>FF_CremateFuneralOutcome</ritualOutcomeEffect>
	</RitualPatternDef>

	<!--Ritual Behavior-->
	<RitualBehaviorDef>
		<defName>FF_CremateFuneralBehavior</defName>
		<durationTicks>5000</durationTicks>
		<workerClass>FuneralFramework.RitualBehaviorWorker_FuneralFramework</workerClass>
		<spectatorFilter Class="FuneralFramework.RitualRoleFuneralCorpse_RitualSpectatorFilterNotCorpse">
		<description>Spectators must be alive.</description>
		</spectatorFilter>
		<roles>
		  <li Class="RitualRoleTag">
			<label>speaker</label>
			<id>moralist</id>
			<precept>IdeoRole_Moralist</precept>
			<tag>Moralist</tag>
			<maxCount>1</maxCount>
			<substitutable>True</substitutable>
			<required>True</required>
			<countsAsParticipant>False</countsAsParticipant>
		  </li>
		  <li Class="FuneralFramework.RitualRoleFuneralCorpse">
			<label>Corpse</label>
			<id>FF_RitualRoleCorpse</id>        
			<maxCount>1</maxCount>
			<allowOtherIdeos>false</allowOtherIdeos>
			<allowNonAggroMentalState>true</allowNonAggroMentalState>
			<required>True</required>
			<corpse>True</corpse>			
			<countsAsParticipant>False</countsAsParticipant>
		  </li>
		</roles>
		<stages>
			<li Class="RitualStage_InteractWithRole">
				<defaultDuty>Spectate</defaultDuty>
				<targetId>FF_RitualRoleCorpse</targetId> 
				<endTriggers>
					<li Class="StageEndTrigger_RolesArrived">
						<roleIds>
						  <li>moralist</li>
						</roleIds>
					</li>	
				</endTriggers>				
				<roleBehaviors>
				  <li>
					<roleId>moralist</roleId>
					<dutyDef>FF_DeliverCorpseToCellDuty</dutyDef>
				  </li>				  
				</roleBehaviors>
			</li>    
			<li>
				<defaultDuty>Spectate</defaultDuty>
				<endTriggers>
				  <li Class="StageEndTrigger_DurationPercentage">
					<percentage>0.3</percentage>
				  </li>
				</endTriggers>
				<roleBehaviors>
				  <li>
					<roleId>moralist</roleId>
					<dutyDef>SpeakOnCellFacingSpectators</dutyDef>
					<speakerInteraction>Speech_Funeral</speakerInteraction>
					<customPositions>					  
					  <li Class="FuneralFramework.RitualPosition_BesideInteract" />
					</customPositions>
				  </li>
				</roleBehaviors>
				<visualEffectDef>Funeral</visualEffectDef>
				<postAction Class="RitualStageAction_Message">
					<text>{0}: The speech is over, and the cremation is beginning.</text>
					<messageTypeDef>NeutralEvent</messageTypeDef>
				</postAction>
				<preAction Class="FuneralFramework.RitualStageAction_FuneralEffectSound">				
					  <sound>Recipe_Cremate</sound>
					  <effect>Cremate</effect>
				</preAction>				
			</li>
			<li>
				<defaultDuty>Spectate</defaultDuty>
				<endTriggers>
				  <li Class="StageEndTrigger_DurationPercentage">
					<percentage>0.7</percentage>
				  </li>
				</endTriggers>
				<roleBehaviors>
				  <li>
					<roleId>moralist</roleId>
					<dutyDef>ArriveToCell</dutyDef>				  
					<customPositions>					  
					  <li Class="FuneralFramework.RitualPosition_InterctingOnCell"/>
					</customPositions>
				  </li>
				</roleBehaviors>
				<visualEffectDef>Funeral</visualEffectDef>
			</li>
		</stages>
  </RitualBehaviorDef>
   



   
  <!--Ritual Outcome-->
    <RitualOutcomeEffectDef>
	<defName>FF_CremateFuneralOutcome</defName>
    <description>Depending on ritual quality, participants will get between {MINMOOD} and {MAXMOOD} mood for {MOODDAYS} days.</description>
    <workerClass>FuneralFramework.RitualOutcomeEffectWorker_FuneralFramework</workerClass>
    <allowAttachableOutcome>false</allowAttachableOutcome>
    <outcomeChances>
      <li>
        <label>Terrible</label>
        <chance>0.05</chance>
        <memory>FF_TerribleFuneral</memory>
        <description>The {0} was a terrible! The speech was boring and the crematorium wasn't hot enough.</description>
        <positivityIndex>-2</positivityIndex>
      </li>
      <li>
        <label>Lackluster</label>
        <chance>0.15</chance>
        <memory>FF_LacklusterFuneral</memory>
        <description>The {0} was lackluster. The speech was long-winded and did not honor them</description>
        <positivityIndex>-1</positivityIndex>
      </li>
      <li>
        <label>Good</label>
        <chance>0.6</chance>
        <memory>FF_GoodFuneral</memory>
        <description>The {0} was good.  The speaker's final words provided a path for everyone move on.</description>
        <positivityIndex>1</positivityIndex>
      </li>
      <li>
        <label>Amazing</label>
        <chance>0.2</chance>
        <memory>FF_AmazingFuneral</memory>
        <description>The {0} was heartwarming. The speech was captivating and heartfelt, and everyone came away focused on good memories.</description>
        <positivityIndex>2</positivityIndex>
      </li>
    </outcomeChances>
	<comps>
	<li Class="RitualOutcomeComp_RolePresentNotSubstituted">
		<roleId>moralist</roleId>
		<label>moral guide present</label>
		<qualityOffset>0.2</qualityOffset>
		<disableInClassicMode>true</disableInClassicMode>
		</li>
	<li Class="RitualOutcomeComp_ParticipantCount">
		<label>participant count</label>
		<curve>
		  <points>
			<li>(1,  0.0)</li>
			<li>(5,  0.4)</li>
			<li>(10, 0.6)</li>
		  </points>
		</curve>
	</li>
	<li Class="FuneralFramework.RitualOutcomeComp_FuneralFramework">
		<thingDefToSpawn>Urn</thingDefToSpawn>
		<stuffDefToSpawn>BlocksMarble</stuffDefToSpawn>
		<thingCount>1</thingCount>
		<roleToSpawnOn>FF_RitualRoleCorpse</roleToSpawnOn>
		<extraDefDescription>{DEFDESC} Contains the last remains of {CORPSE}</extraDefDescription>
		<extraDefLabel>{DEFLABEL} Containing:{CORPSE}</extraDefLabel>
	</li>
    </comps>
  </RitualOutcomeEffectDef>
 
   <!--Ritual Obligation-->
	<RitualObligationTargetFilterDef>
		<defName>FF_FuneralTargetThingNeedsPower</defName>
		<workerClass>FuneralFramework.RitualObligationTargetWorker_FuneralThingNeedsPower</workerClass>		
		<thingDefs>
		  <li>ElectricCrematorium</li>		  
		</thingDefs>
	</RitualObligationTargetFilterDef>
</Defs>